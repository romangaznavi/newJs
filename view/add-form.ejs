<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <title>Edit User Page</title>
</head>
<body>
    <div class="container">
        <h1>User Data Entry Form</h1>
    <form action="/submitForm" method="POST" class="form-row">

        <div class="form-group col-md-6">
            <label for="fname" >Enter your First Name:</label>
            <input type="text" name="fname" id="fname" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <label for="lname">Enter your Last Name:</label>
            <input type="text" name="lname" id="lname" class="form-control">
        </div>    

        <div class="form-group col-md-6">
            <label for="fname">Enter Your Email is:</label>
            <input type="text" name="email" id="email" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <label for="age">Enter Your Age is:</label>
            <input type="text" name="age" id="age" class="form-control">
        </div>

            <div class="form-group col-md-6">
            <label for="province">Select Province:</label>
            <select class="form-control" id="province" name="province">
                    <%provinceData.forEach((item)=>{ %>
                        <option value="<%=item.id%>"><%=item.province_name%></option>
                        <% }); %>
            </select>
            </div>
            
            <div class="form-group col-md-6">
                <label for="district">Select District:</label>
                <select class="form-control" name="district" id="district">
                    <%districtData.forEach((item) => {%>
                    <option value="<%= item.id %>"><%= item.district_name %></option>
                    <% }); %>
                </select>
            </div>

        <div class="form-group col-md-6">
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <label for="gender">Gender:</label>
            <input type="text" name="gender" id="gender" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <label for="education">Education:</label>
            <input type="text" name="education" id="education" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <label for="other">Other:</label>
            <input type="text" name="other" id="other" class="form-control">
        </div>

        <div class="form-group col-md-6">
            <input type="submit" class="btn btn-primary" name="submit" id="submit" value="Add Record">
            <button><a href='/'>List</a></button>
        </div>
        
    </form>
    </div>
</body>
</html>