<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <title>Edit User Page</title>
</head>
<body>
    <div class="container">
        <%editData.forEach((item) => { %>
        <form action="/edit/<%=item.id%>" method="POST" class="form-row">
        <div class="form-group col-md-6">
            <label for="fname">Your First Name is:</label>
            <input type="text" name="fname" id="fname" class="form-control" value="<%=item.first_name%>">
        </div>

        <div class="form-group col-md-6">
            <label for="lname">Your Last Name is:</label>
            <input type="text" name="lname" id="lname" class="form-control" value="<%=item.last_name%>">
        </div>    

        <div class="form-group col-md-6">
            <label for="fname">Your Email is:</label>
            <input type="text" name="email" id="email" class="form-control" value="<%=item.email%>">
        </div>

        <div class="form-group col-md-6">
            <label for="age">Your Age is:</label>
            <input type="text" name="age" id="age" class="form-control" value="<%=item.age%>">
        </div>
        
        <div class="form-group col-md-6">
            <label for="province">Select Province:</label>
            <select class="form-control" id="province" name="province">

                    <option value="<%=item.id%>"><%=item.province%></option>

            </select>
        </div>
        
        <div class="form-group col-md-6">
            <label for="district">Select District:</label>
            <select class="form-control" aria-selected="selected" name="district" id="district">
                    
                <option value="<%=item.id%>"><%=item.district %>"</option>
                    
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" class="form-control" value="<%=item.address%>">
        </div>

        <div class="form-group col-md-6">
            <label for="gender">Gender:</label>
            <input type="text" name="gender" id="gender" class="form-control" value="<%=item.gender%>">
        </div>

        <div class="form-group col-md-6">
            <label for="education">Education:</label>
            <input type="text" name="education" id="education" class="form-control" value="<%=item.education%>">
        </div>

        <div class="form-group col-md-6">
            <label for="other">Other:</label>
            <input type="text" name="other" id="other" class="form-control" value="<%=item.other%>">
        </div>

        <div class="form-group col-md-6">
            <input type="submit" name="submit" id="submit" class="btn btn-primary" value="Update Record">
        </div>
        
        </form>
        <% }) %>
    </div>
</body>
</html>